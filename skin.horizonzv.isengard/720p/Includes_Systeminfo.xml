<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="systeminfo">
		<control type="group">
			<left>0</left>
			<top>30</top>
			<visible>!Skin.HasSetting(HideSysteminfo)</visible>
			<include>openclose</include>
			<include>opencloseslow</include>
			<control type="image">
				<left>-10</left>
				<top>530</top>
				<width>1300</width>
				<height>2</height>
				<colordiffuse>fanartdiffuse</colordiffuse>
				<texture background="true">Separator1.png</texture>
			</control>
			<control type="image">
				<left>-10</left>
				<top>532</top>
				<width>1300</width>
				<height>160</height>
				<colordiffuse>fanartdiffuse</colordiffuse>
				<texture background="true">BlackBack.png</texture>
			</control>
			<control type="grouplist">
				<left>50</left>
				<top>540</top>
				<width>800</width>
				<height>600</height>
				<itemgap>-7</itemgap>
				<control type="label">
					<description>SKIN BUILD Version</description>
					<width>530</width>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>Skin: $INFO[System.AddonTitle(skin.horizonzv.isengard)]$INFO[System.AddonVersion(skin.horizonzv.isengard), v,]</label>
				</control>
				<control type="label">
					<description>KODI XBE BUILD Version</description>
					<width>530</width>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>KODI $LOCALIZE[144] $INFO[System.BuildVersion]</label>
				</control>
				<control type="label">
					<description>Kernel</description>
					<width>530</width>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>$INFO[System.KernelVersion]</label>
				</control>
				<control type="label">
					<description>Screen</description>
					<width>530</width>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>$INFO[System.ScreenMode]</label>
				</control>
				<control type="label">
					<description>Network</description>
					<width>530</width>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>IP: $INFO[Network.IPAddress]</label>
				</control>
				<control type="label">
					<description>Network</description>
					<width>530</width>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>MAC: $INFO[Network.MacAddress]</label>
				</control>
			</control>
			<control type="grouplist">
				<left>520r</left>
				<top>540</top>
				<width>800</width>
				<height>600</height>
				<itemgap>-7</itemgap>
				<control type="label">
					<description>FPS</description>
					<width>500</width>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>FPS: $INFO[System.FPS]</label>
				</control>
				<control type="label">
					<description>CpuFrequency</description>
					<width>500</width>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>$INFO[System.CpuFrequency,$LOCALIZE[13284] ,]$INFO[System.CPUTemperature, â€¢ $LOCALIZE[22011] ,]</label>
				</control>
				<control type="label">
					<description>CPU Text</description>
					<width>500</width>
					<height>40</height>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>$LOCALIZE[13271] $INFO[System.CPUUsage]</label>
				</control>
				<control type="progress">
					<description>CPU BAR</description>
					<width>500</width>
					<height>12</height>
					<info>System.CPUUsage</info>
				</control>
				<control type="label">
					<description>Memory Text</description>
					<width>500</width>
					<height>40</height>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<label>$LOCALIZE[31309] $INFO[system.memory(used.percent)]</label>
				</control>
				<control type="progress">
					<description>Memory BAR</description>
					<width>500</width>
					<height>12</height>
					<info>system.memory(used)</info>
				</control>
			</control>
		</control>
	</include>
	<include name="systeminfo_small">
		<control type="group">
			<left>0</left>
			<top>10</top>
			<visible>!Skin.HasSetting(HideSysteminfo)</visible>
			<control type="grouplist">
				<left>50</left>
				<top>430</top>
				<width>265</width>
				<height>200</height>
				<itemgap>-7</itemgap>
				<control type="label">
					<description>KODI XBE BUILD Version</description>
					<width>265</width>
					<height>25</height>
					<align>left</align>
					<font>font16</font>
					<textcolor>grey1</textcolor>
					<label>KODI $LOCALIZE[144] $INFO[System.BuildVersion]</label>
				</control>
				<control type="label">
					<description>CPU Text</description>
					<width>265</width>
					<height>35</height>
					<font>font16</font>
					<textcolor>grey1</textcolor>
					<label>$LOCALIZE[13271] $INFO[System.CPUUsage]</label>
				</control>
				<control type="progress">
					<description>CPU BAR</description>
					<width>265</width>
					<height>12</height>
					<info>System.CPUUsage</info>
				</control>
				<control type="label">
					<description>Memory Text</description>
					<width>265</width>
					<height>35</height>
					<font>font16</font>
					<textcolor>grey1</textcolor>
					<label>$LOCALIZE[31309] $INFO[system.memory(used.percent)]</label>
				</control>
				<control type="progress">
					<description>Memory BAR</description>
					<width>265</width>
					<height>12</height>
					<info>system.memory(used)</info>
				</control>
			</control>
		</control>
	</include>
</includes>
