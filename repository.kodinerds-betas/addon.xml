<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
    <addon id="repository.kodinerds-betas"
		name="kodinerds.net Add-ons Betas"
		version="1.0.0"
		provider-name="Jugger">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="Jugger">
		<info compressed="true">https://raw.githubusercontent.com/Daniel75/nerdsrepo_betas/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Daniel75/nerdsrepo_betas/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/Daniel75/nerdsrepo_betas/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install add-ons from kodinerds</summary>
		<summary lang="de">Installiere Add-ons (Betas) von Kodinerds</summary>
		<description>download and install add-ons from repository-kodinerds addon-repository.</description>
		<description lang="de">Downloade und installiere Add-ons vom repository-kodinerds Add-on-Repository.</description>
		<disclaimer>kodinerds.net hat die Add-ons nicht selber erstellt und haftet nicht für deren Inhalt.</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

