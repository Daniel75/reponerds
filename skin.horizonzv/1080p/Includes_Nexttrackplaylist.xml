                                <top>1</top>
                                <width>642</width>
                                <height>364</height>
                                <texture border="6" diffuse="masks/Mask.png">BlackBack.png</texture>
                                <visible>![Player.ShowInfo | Window.IsActive(MusicOSD)|Player.Paused|Player.Forwarding|Player.Rewinding]</visible>
                            </control>
                            <control type="image">
                                <left>1268</left>
                                <top>0</top>
                                <width>645</width>
                                <height>368</height>
                                <colordiffuse>fanartdiffuse</colordiffuse>
                                <texture border="6">masks/Default.png</texture>
                                <visible>![Player.ShowInfo | Window.IsActive(MusicOSD)|Player.Paused|Player.Forwarding|Player.Rewinding]</visible>
                                <include>openclosevisible</include>
                            </control>
                        </control>
                        <control type="group">
                            <top>3</top>
                            <control type="label">
                                <left>1282</left>
                                <top>0</top>
                                <width>1350</width>
                                <height>45</height>
                                <align>left</align>
                                <label>559</label>
                                <font>font12</font>
                                <textcolor>white</textcolor>
                                <shadowcolor>black</shadowcolor>
                            </control>
                            <control type="grouplist" id="555">
                                <left>1290</left>
                                <top>42</top>
                                <width>600</width>
                                <height>1080</height>
                                <align>left</align>
                                <itemgap>-2</itemgap>
                                <orientation>vertical</orientation>
                                <include>NextTracksPlaylist_Content</include>
                            </control>
                            <control type="image">
                                <description>Partymode Header label</description>
                                <left>1860</left>
                                <top>8</top>
                                <width>30</width>
                                <height>30</height>
                                <texture>icons/PartyMode.png</texture>
                                <visible>MusicPartyMode.Enabled</visible>
                            </control>
                        </control>
                    </control>
                </control>
            </control>
        </control>
