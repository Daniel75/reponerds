                    <altlabel>20045</altlabel>
                    <align>center</align>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>
                    <focusedcolor>black</focusedcolor>
                    <shadowcolor>-</shadowcolor>
                    <textwidth>435</textwidth>
                    <texturenofocus>-</texturenofocus>
