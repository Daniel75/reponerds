                    <height>60</height>
                    <texturenofocus>-</texturenofocus>
                    <align>center</align>
                    <textcolor>white</textcolor>
                    <focusedcolor>black</focusedcolor>
                    <shadowcolor>-</shadowcolor>
                    <textwidth>435</textwidth>
                    <onclick>Quit()</onclick>
