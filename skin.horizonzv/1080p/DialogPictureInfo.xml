<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5</defaultcontrol>
	<backgroundcolor>$VAR[BackgroundOverlayColor]</backgroundcolor>
    <include>openclose</include>
    <controls>
        <control type="group">
            <control type="group">
                <include>openclosefanart</include>
                <control type="image">
                    <include>Dimensions_Fullscreen</include>
                    <colordiffuse>grey</colordiffuse>
                    <texture background="true">special://skin/backgrounds/mediaoverlaywhite.jpg</texture>
                    <aspectratio>scale</aspectratio>
                </control>
                <include>WhiteGrunge</include>
            </control>
            <control type="group">
                <include>DialogInfoWide</include>
                <include>openclosebox</include>
                <control type="label">
                    <description>header label</description>
                    <left>30</left>
                    <top>188</top>
                    <width>1020</width>
                    <font>impacted31</font>
                    <label>$LOCALIZE[13406]</label>
                    <align>left</align>
                    <textcolor>white</textcolor>
                </control>
                <control type="image">
                    <left>135</left>
                    <top>285</top>
                    <width>750</width>
                    <height>525</height>
                    <aspectratio>keep</aspectratio>
                    <texture background="true" border="5">$INFO[ListItem.FilenameAndPath]</texture>
                    <bordertexture border="10">ThumbShadow.png</bordertexture>
                    <bordersize>7</bordersize>
                </control>
                <control type="image">
                    <left>1041</left>
                    <top>285</top>
                    <width>3</width>
                    <height>525</height>
                    <colordiffuse>fanartdiffuse</colordiffuse>
                    <texture background="true" border="1">Separator4.png</texture>
                </control>
                <control type="scrollbar" id="60">
                    <left>1898</left>
                    <top>165</top>
                    <height>668</height>
                    <onleft>5</onleft>
                    <onright>5</onright>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                </control>
                <control type="list" id="5">
                    <animation effect="slide" start="0,0" end="15,0" time="0" condition="!Control.IsVisible(60)">Conditional</animation>
                    <left>1095</left>
                    <top>165</top>
                    <width>795</width>
                    <height>675</height>
                    <onleft>60</onleft>
                    <onright>60</onright>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <pagecontrol>60</pagecontrol>
                    <scrolltime>200</scrolltime>
                    <itemlayout height="51">
                        <control type="label">
                            <left>15</left>
                            <top>0</top>
                            <width>750</width>
                            <height>60</height>
                            <aligny>center</aligny>
                            <textcolor>grey3</textcolor>
                            <align>left</align>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>0</left>
                            <top>0</top>
                            <width>795</width>
                            <height>60</height>
                            <aligny>center</aligny>
                            <textcolor>grey3</textcolor>
                            <align>right</align>
                            <info>ListItem.Label2</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="51">
                        <control type="image">
                            <left>15</left>
                            <top>0</top>
                            <width>780</width>
                            <height>54</height>
                            <colordiffuse>menudiffuse</colordiffuse>
                            <texture background="true" border="5">buttons/ButtonNFlight.png</texture>
                            <visible>Control.HasFocus(5)</visible>
                        </control>
                        <control type="label">
                            <left>15</left>
                            <top>0</top>
                            <width>750</width>
                            <height>60</height>
                            <aligny>center</aligny>
                            <textcolor>grey3</textcolor>
                            <align>left</align>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>0</left>
                            <top>0</top>
                            <width>795</width>
                            <height>60</height>
                            <aligny>center</aligny>
                            <textcolor>grey3</textcolor>
                            <align>right</align>
                            <info>ListItem.Label2</info>
                        </control>
                    </focusedlayout>
                </control>
                <control type="label">
                    <description>number of files/pages in list text label</description>
                    <left>495r</left>
                    <top>862</top>
                    <width>450</width>
                    <height>52</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <scroll>true</scroll>
                    <textcolor>grey</textcolor>
                    <label>([COLOR=selected]$INFO[Container(5).NumItems][/COLOR]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=selected]$INFO[Container(5).CurrentPage]/$INFO[Container(5).NumPages][/COLOR])</label>
                </control>
            </control>
        </control>
    </controls>
</window>
