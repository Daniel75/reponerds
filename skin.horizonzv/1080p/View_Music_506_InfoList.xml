<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="MusicInfoListView">
        <include>openclose</include>
        <control type="group">
            <include>openclosevisible</include>
            <visible>Control.IsVisible(506)+!Control.HasFocus(666)</visible>
            <control type="group">
                <include>WhiteGrunge</include>
                <include>MirrorPanel</include>
            </control>
        </control>
        <control type="group">
            <include>opencloseslideright</include>
            <visible>Control.IsVisible(506)+!Control.HasFocus(666)</visible>
            <animation type="Conditional" condition="[ControlGroup(9000).HasFocus()|ControlGroup(90000).HasFocus()|ControlGroup(9001).HasFocus()| ControlGroup(9002).HasFocus()] + Skin.HasSetting(animation)">
                <effect type="zoom" center="750,750" start="100" end="105" time="250" />
                <effect type="slide" start="0" end="525" time="250" />
            </animation>
            <include>InfoListLeft</include>
            <control type="list" id="506">
                <left>105</left>
                <top>195</top>
                <width>870</width>
                <height>735</height>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(HideJumpSMSBar)+Control.IsVisible(60)">60</onright>
                <onright condition="Skin.HasSetting(HideJumpSMSBar)+!Control.IsVisible(60)">SetFocus(732)</onright>
                <onright condition="!Skin.HasSetting(HideJumpSMSBar)">15000</onright>
                <onup>506</onup>
                <ondown>506</ondown>
                <viewtype label="$LOCALIZE[544]">list</viewtype>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <visible>Window.IsVisible(MusicPlaylist)|Container.Content(Songs)|Container.Content(Albums)</visible>
                <itemlayout height="60" width="870">
                    <control type="label">
                        <left>15</left>
                        <top>3</top>
                        <width>780</width>
                        <height>60</height>
                        <textcolor>grey</textcolor>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>60</left>
                        <top>3</top>
                        <width>780</width>
                        <height>60</height>
                        <textcolor>grey</textcolor>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="60" width="870">
                    <control type="group">
                        <include>focuseffect</include>
                        <control type="image">
                            <left>0</left>
                            <top>3</top>
                            <width>870</width>
                            <height>60</height>
                            <colordiffuse>grey2</colordiffuse>
                            <texture border="5">buttons/ButtonFOlightGlow.png</texture>
                            <visible>!Control.HasFocus(506)</visible>
                            <include>openclosevisible</include>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>3</top>
                            <width>870</width>
                            <height>60</height>
                            <colordiffuse>grey1</colordiffuse>
                            <texture border="5">buttons/ButtonFOlightGlow.png</texture>
                            <visible>Control.HasFocus(506)</visible>
                            <include>openclosevisible</include>
                        </control>
                        <control type="label">
                            <left>15</left>
                            <top>3</top>
                            <width>780</width>
                            <height>60</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <shadowcolor>black</shadowcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>60</left>
                            <top>3</top>
                            <width>780</width>
                            <height>60</height>
                            <align>right</align>
                            <aligny>center</aligny>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="60">
                <left>964</left>
                <top>188</top>
                <height>742</height>
                <onleft>550</onleft>
                <onright>732</onright>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
                <visible>Control.IsVisible(506)</visible>
            </control>
        </control>
        <control type="group">
            <include>opencloseslideleft</include>
            <visible>Control.IsVisible(506)+!Control.HasFocus(666)</visible>
            <animation type="Conditional" condition="[ControlGroup(9000).HasFocus()|ControlGroup(90000).HasFocus()|ControlGroup(9001).HasFocus()| ControlGroup(9002).HasFocus()] + Skin.HasSetting(animation)">
                <effect type="zoom" center="750,750" start="100" end="105" time="250" />
                <effect type="slide" start="0" end="630" time="250" />
                <effect type="fade" start="100" end="60" time="250" />
            </animation>
            <include>InfoListRight</include>
            <control type="group">
                <left>1065</left>
                <top>225</top>
                <control type="image">
                    <left>0</left>
                    <top>-15</top>
                    <width>765</width>
                    <height>390</height>
                    <aspectratio>keep</aspectratio>
                    <fadetime>FadeTime</fadetime>
                    <texture background="true">$INFO[ListItem.Icon]</texture>
                    <bordertexture border="8">ThumbShadow.png</bordertexture>
                    <bordersize>8</bordersize>
                </control>
                <control type="group">
                    <left>15</left>
                    <control type="label">
                        <left>15</left>
                        <top>390</top>
                        <width>705</width>
                        <height>38</height>
                        <label>$INFO[ListItem.Artist]</label>
                        <scroll>true</scroll>
                        <align>center</align>
                        <aligny>center</aligny>
                    </control>
                    <control type="label">
                        <left>15</left>
                        <top>435</top>
                        <width>705</width>
                        <height>38</height>
                        <label>$INFO[ListItem.Album]</label>
                        <font>impacted24</font>
                        <wrapmultiline>true</wrapmultiline>
                        <align>center</align>
                        <aligny>center</aligny>
                    </control>
                    <control type="image">
                        <left>75</left>
                        <top>488</top>
                        <width>600</width>
                        <height>3</height>
                        <colordiffuse>fanartdiffuse</colordiffuse>
                        <texture background="true">Separator1.png</texture>
                    </control>
                    <control type="label">
                        <left>15</left>
                        <top>510</top>
                        <width>705</width>
                        <height>38</height>
                        <label>$INFO[ListItem.Title]</label>
                        <scroll>true</scroll>
                        <align>center</align>
                        <aligny>top</aligny>
                        <textcolor>white</textcolor>
                        <wrapmultiline>true</wrapmultiline>
                        <visible>!Container.Content(Albums)</visible>
                    </control>
                    <control type="label">
                        <left>15</left>
                        <top>540</top>
                        <width>705</width>
                        <height>38</height>
                        <label>$INFO[ListItem.Genre]</label>
                        <scroll>true</scroll>
                        <align>center</align>
                        <aligny>top</aligny>
                        <textcolor>white</textcolor>
                        <wrapmultiline>true</wrapmultiline>
                        <visible>Container.Content(Albums)</visible>
                    </control>
                    <control type="label">
                        <description>Trackno txt</description>
                        <left>15</left>
                        <top>548</top>
                        <width>705</width>
                        <height>38</height>
                        <label>$INFO[listitem.TrackNumber,[COLOR=selected]$LOCALIZE[31310]: [/COLOR]]</label>
                        <align>center</align>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <visible>!Container.Content(Albums)</visible>
                    </control>
                    <control type="label">
                        <description>Year txt</description>
                        <left>15</left>
                        <top>585</top>
                        <width>705</width>
                        <height>38</height>
                        <label>$INFO[listitem.Year,[COLOR=selected]$LOCALIZE[345]: [/COLOR]]</label>
                        <align>center</align>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                    </control>
                    <control type="grouplist">
                        <left>0</left>
                        <top>645</top>
                        <width>705</width>
                        <height>120</height>
                        <align>center</align>
                        <itemgap>1</itemgap>
                        <orientation>horizontal</orientation>
                        <include>FlagMusic</include>
                    </control>
                </control>
            </control>
        </control>
        <control type="group">
            <include>openclosevisible</include>
            <visible>Control.IsVisible(506)+!Control.HasFocus(666)</visible>
            <control type="group">
                <left>-105</left>
                <top>0</top>
                <include>ScrollOffsetLabel</include>
            </control>
            <include>CommonPageCount</include>
            <include condition="!Skin.HasSetting(HideJumpSMSBar)">AlphaBarV</include>
        </control>
    </include>
</includes>
