<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Videos (recent) [COLOR=FFFF0000]!! DO NOT CHANGE !![/COLOR]</name>
    <match>all</match>
    <rule field="playlist" operator="is">
        <value>library://video/recentlyaddedmovies.xml</value>
    </rule>
    <rule field="playcount" operator="lessthan">
        <value>1</value>
    </rule>
    <limit>10</limit>
    <order direction="descending">dateadded</order>
</smartplaylist>