                            <top>150</top>
                            <include>cdart_player</include>
                        </control>
                        <control type="image" id="66">
                            <left>126</left>
                            <top>146</top>
                            <width>278</width>
                            <height>278</height>
                            <aspectratio scalediffuse="false">stretch</aspectratio>
