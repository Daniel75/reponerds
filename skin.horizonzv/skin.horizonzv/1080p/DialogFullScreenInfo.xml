<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="142">
    <defaultcontrol always="true">603</defaultcontrol>
    <controls>
        <control type="group">
            <visible>!Window.IsVisible(VideoOSD)</visible>
            <control type="group">
                <include>openclosemediumnodelay</include>
                <visible>Player.Paused</visible>
                <control type="image">
                    <include>Dimensions_Fullscreen</include>
                    <colordiffuse>fanartdiffuse</colordiffuse>
                    <texture background="true">SideFadeWhite.png</texture>
                </control>
            </control>
            <control type="group">
                <!-- VideoInfo -->
                <include>openclose</include>
                <include>opencloseslideleft</include>
                <control type="group">
                    <left>1102</left>
                    <top></top>
                    <control type="image">
                        <left>0</left>
                        <top>-15</top>
                        <width>795</width>
                        <height>1200</height>
                        <texture background="true" border="8">BlackBack.png</texture>
                    </control>
                    <control type="group">
                        <!-- extraart movies -->
                        <left></left>
                        <top>8</top>
                        <visible>VideoPlayer.Content(Movies)</visible>
                        <control type="image" id="71">
                            <visible>Skin.HasSetting(video_art)</visible>
                            <left>38</left>
                            <top>45</top>
                            <width>720</width>
                            <height>300</height>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <texture background="true">$VAR[extraart_player_rule]</texture>
                        </control>
                        <control type="group">
                            <visible>!Skin.HasSetting(video_art)|[String.IsEmpty(Control.GetLabel(71))]</visible>
                            <control type="image" id="72">
                                <left>38</left>
                                <top>45</top>
                                <width>720</width>
                                <height>300</height>
                                <aspectratio align="center" aligny="center">keep</aspectratio>
                                <texture background="true">$INFO[Player.Art(fanart)]</texture>
                                <bordertexture border="4">buttons/ButtonNF.png</bordertexture>
                                <bordersize>8</bordersize>
                            </control>
                            <control type="image" id="73">
                                <visible>String.IsEmpty(Control.GetLabel(72))</visible>
                                <left>38</left>
                                <top>45</top>
                                <width>720</width>
                                <height>300</height>
                                <aspectratio align="center" aligny="center">keep</aspectratio>
                                <texture background="true">$INFO[VideoPlayer.Cover]</texture>
                                <bordertexture border="4">buttons/ButtonNF.png</bordertexture>
                                <bordersize>8</bordersize>
                            </control>
                        </control>
                    </control>
                    <control type="group">
                        <!-- extraart tvshows -->
                        <visible>VideoPlayer.Content(episodes)|VideoPlayer.Content(musicvideos)|Pvr.IsPlayingTv</visible>
                        <control type="image">
                            <description>Non Movie cover image</description>
                            <left>38</left>
                            <top>45</top>
                            <width>720</width>
                            <height>300</height>
                            <fadetime>FadeTime</fadetime>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <texture background="true">$INFO[VideoPlayer.Cover]</texture>
                            <bordertexture border="5">buttons/ButtonNF.png</bordertexture>
                            <bordersize>8</bordersize>
                        </control>
                    </control>
                    <control type="label">
                        <description>Chapter Count</description>
                        <left>0</left>
                        <top>960</top>
                        <width>750</width>
                        <height>45</height>
                        <font>ubuntu-r16b</font>
                        <label>$INFO[Player.Chapter,[COLOR=grey1]$LOCALIZE[21396]:[/COLOR] ]$INFO[Player.ChapterCount, / ]</label>
                        <align>right</align>
                        <visible>Player.ChapterCount+!Pvr.IsPlayingTv</visible>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <top>368</top>
                        <width>720</width>
                        <font>ubuntu-r21b</font>
                        <textcolor>selected</textcolor>
                        <label>$VAR[VideoPlayerTitle]</label>
                        <align>center</align>
                        <scroll>true</scroll>
                    </control>
                    <control type="group">
                        <top>6</top>
                        <control type="label">
                            <description>Player Times</description>
                            <left>30</left>
                            <top>990</top>
                            <width>750</width>
                            <font>ubuntu-r16b</font>
                            <label>$INFO[Player.Time]$INFO[Player.Duration,[COLOR=grey1] / [/COLOR]]</label>
                            <align>left</align>
                        </control>
                        <control type="label">
                            <description>Current Video End Time</description>
                            <left>0</left>
                            <top>990</top>
                            <width>750</width>
                            <height>45</height>
                            <font>ubuntu-r16b</font>
                            <label>[COLOR=grey1]$LOCALIZE[31049]: [/COLOR]$INFO[Player.FinishTime]</label>
                            <align>right</align>
                            <shadowcolor>-</shadowcolor>
                        </control>
                    </control>
                    <control type="image">
                        <left>0</left>
                        <top>420</top>
                        <width>795</width>
                        <height>1</height>
                        <texture background="true">Separator2.png</texture>
                    </control>
                    <control type="image">
                        <left>0</left>
                        <top>900</top>
                        <width>795</width>
                        <height>1</height>
                        <texture background="true">Separator2.png</texture>
                    </control>
                    <control type="textbox">
                        <left>45</left>
                        <top>428</top>
                        <width>690</width>
                        <height>464</height>
                        <include condition="!Skin.HasSetting(BigPlotText)">PlotText16Var</include>
                        <include condition="Skin.HasSetting(BigPlotText)">PlotTextBigVar</include>
                        <label fallback="">$INFO[VideoPlayer.Plot]</label>
                    </control>
                    <control type="textbox">
                        <left>45</left>
                        <top>428</top>
                        <width>690</width>
                        <height>381</height>
                        <align>left</align>
                        <shadowcolor>-</shadowcolor>
                        <label>$LOCALIZE[19055]</label>
                        <visible>String.IsEmpty(VideoPlayer.Plot)</visible>
                    </control>
                    <control type="label">
                        <left>45</left>
                        <top>950</top>
                        <width>690</width>
                        <height>45</height>
                        <font>ubuntu-r16b</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>•  $INFO[VideoPlayer.NextTitle,[COLOR=grey]$LOCALIZE[19031]: [/COLOR],]  •</label>
                        <visible>Pvr.IsPlayingTv|VideoPlayer.Content(livetv)</visible>
                    </control>
                    <control type="progress">
                        <description>Progressbar</description>
                        <left>30</left>
                        <top>45r</top>
                        <width>720</width>
                        <height>15</height>
                        <info>Player.Progress</info>
                    </control>
                    <control type="grouplist">
                        <left>30</left>
                        <top>909</top>
                        <width>705</width>
                        <height>120</height>
                        <itemgap>6</itemgap>
                        <align>center</align>
                        <orientation>horizontal</orientation>
                        <include>FlagVideo_Player</include>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
