<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="systeminfo">
        <control type="group">
            <left>0</left>
            <top>40</top>
            <!-- <visible>!Skin.HasSetting(HideSysteminfo)</visible> -->
            <include>openclose</include>
            <include>opencloseslideup</include>
            <control type="image">
                <left>-15</left>
                <top>795</top>
                <width>1950</width>
                <height>3</height>
                <colordiffuse>fanartdiffuse</colordiffuse>
                <texture background="true">Separator1.png</texture>
            </control>
            <control type="image">
                <left>-15</left>
                <top>798</top>
                <width>1950</width>
                <height>240</height>
                <!-- <colordiffuse>fanartdiffuse</colordiffuse> -->
                <texture background="true">BlackBack.png</texture>
            </control>
            <control type="grouplist">
                <left>75</left>
                <top>810</top>
                <width>1200</width>
                <height>900</height>
                <itemgap>-10</itemgap>
                <control type="label">
                    <description>SKIN BUILD Version</description>
                    <width>795</width>
                    <align>left</align>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>Skin: $INFO[System.AddonTitle(skin.horizonzv)]$INFO[System.AddonVersion(skin.horizonzv), v,]</label>
                </control>
                <control type="label">
                    <description>KODI XBE BUILD Version</description>
                    <width>795</width>
                    <align>left</align>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>KODI $LOCALIZE[144] $INFO[System.BuildVersion]</label>
                </control>
                <control type="label">
                    <description>Kernel</description>
                    <width>795</width>
                    <align>left</align>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[System.KernelVersion]</label>
                </control>
                <control type="label">
                    <description>Screen</description>
                    <width>795</width>
                    <align>left</align>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[System.ScreenMode]</label>
                </control>
                <control type="label">
                    <description>Network</description>
                    <width>795</width>
                    <align>left</align>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>IP: $INFO[Network.IPAddress]</label>
                </control>
                <control type="label">
                    <description>Network</description>
                    <width>795</width>
                    <align>left</align>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>MAC: $INFO[Network.MacAddress]</label>
                </control>
            </control>
            <control type="grouplist">
                <left>780r</left>
                <top>810</top>
                <width>1200</width>
                <height>900</height>
                <itemgap>-10</itemgap>
                <control type="label">
                    <description>FPS</description>
                    <width>750</width>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>FPS: $INFO[System.FPS]</label>
                </control>
                <control type="label">
                    <description>CpuFrequency</description>
                    <width>750</width>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[System.CpuFrequency,$LOCALIZE[13284] ,]$INFO[System.CPUTemperature, â€¢ $LOCALIZE[22011] ,]</label>
                </control>
                <control type="label">
                    <description>CPU Text</description>
                    <width>750</width>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>$LOCALIZE[13271] $INFO[System.CPUUsage]</label>
                </control>
				<control type="label">
					<description>fake</description>
					<width>750</width>
					<height>20</height>
					<label>-</label>
				</control>
				<control type="progress">
					<description>CPU BAR</description>
					<width>750</width>
					<height>12</height>
					<info>System.CPUUsage</info>
				</control>
				<control type="label">
					<description>fake</description>
					<width>750</width>
					<height>20</height>
					<label>-</label>
				</control>
                <control type="label">
                    <description>Memory Text</description>
                    <width>750</width>
                    <font>font16</font>
                    <textcolor>grey</textcolor>
                    <label>$LOCALIZE[31309] $INFO[system.memory(used.percent)]</label>
                </control>
				<control type="label">
					<description>fake</description>
					<width>750</width>
					<height>20</height>
					<label>-</label>
				</control>
				<control type="progress">
					<description>Memory BAR</description>
					<width>750</width>
					<height>12</height>
					<info>system.memory(used)</info>
				</control>
				<control type="label">
					<description>fake</description>
					<width>750</width>
					<height>20</height>
					<label>-</label>
				</control>
            </control>
        </control>
    </include>
</includes>
