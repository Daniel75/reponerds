<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- ===================================================================================== -->
	<!-- ============================== BANNER WALL VIEW ID 519 ============================== -->
	<!-- =================================== TV Shows only =================================== -->
	<include name="BannerWallView">
		<control type="image">
			<left>0</left>
			<top>-30</top>
			<width>1380</width>
			<height>820</height>
			<aspectratio>stretch</aspectratio>
			<texture>panels/ContentPanel60.png</texture>
			<visible>Control.IsVisible(519)</visible>
		</control>
		<control type="group">
			<visible>Control.IsVisible(519)</visible>
			<!-- wall panel -->
			<control type="wraplist" id="519">
				<left>660</left>
				<top>-140</top>
				<width>680</width>
				<height>920</height>
				<onleft>2</onleft>
				<onright>519</onright>
				<onup>519</onup>
				<ondown>519</ondown>
				<viewtype label="BannerRightList">wraplist</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime>180</scrolltime>
				<preloaditems>2</preloaditems>
				<focusposition>4</focusposition>
				<itemgap>1</itemgap>
				<visible>Container.Content(TVShows)</visible>
				<itemlayout height="140" width="575">
					<control type="group">
						<!-- banner mod -->
						<left>33</left>
						<top>33</top>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<texture>black-back3.png</texture>
							<colordiffuse>AAFFFFFF</colordiffuse>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<fadetime>200</fadetime>
							<texture background="true">$INFO[ListItem.Art(banner)]</texture>
							<visible>!StringCompare(ListItem.Label,..)</visible>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<fadetime>200</fadetime>
							<texture background="true">DefaultFolderBack.png</texture>
							<animation effect="zoom" end="115" center="360,288" time="200">Focus</animation>
							<visible>StringCompare(ListItem.Label,..)</visible>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true">black-back.png</texture>
							<colordiffuse>AAFFFFFF</colordiffuse>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="140" width="596">
					<control type="group">	
						<left>0</left>
						<top>63</top>
						<control type="image">
							<!-- banner mod -->
							<left>0</left>
							<top>0</top>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<fadetime>200</fadetime>
							<texture background="true">$INFO[ListItem.Art(banner)]</texture>
							<bordertexture border="4">folder-focus.png</bordertexture>
							<bordersize>6</bordersize>
							<animation effect="zoom" end="115" center="360,288" time="200">Focus</animation>
							<visible>!StringCompare(ListItem.Label,..)</visible>
						</control>
						<control type="image">
							<!-- banner mod -->
							<left>0</left>
							<top>0</top>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<fadetime>200</fadetime>
							<texture background="true">DefaultFolderBack.png</texture>
							<bordertexture border="4">folder-focus.png</bordertexture>
							<bordersize>6</bordersize>
							<animation effect="zoom" end="115" center="360,288" time="200">Focus</animation>
							<visible>StringCompare(ListItem.Label,..)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>

			<control type="image">
				<left>-5</left>
				<top>570</top>
				<width>1303</width>
				<height>160</height>
				<texture>HomeSubNF.png</texture>
			</control> 
			<control type="group">
				<left>30</left>
				<top>580</top>
				<visible>Control.IsVisible(519) | Container.Content(TVShows)</visible>
				<control type="label">
					<description>First Aired</description>
					<left>700</left>
					<top>0</top>
					<width>440</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[20416]: [/COLOR]$INFO[listitem.premiered]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="label">
					<description>Genre</description>
					<left>700</left>
					<top>30</top>
					<width>480</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[515]: [/COLOR]$INFO[listitem.genre]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="label">
					<description>Seasons</description>
					<left>700</left>
					<top>65</top>
					<width>440</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]Staffeln: [/COLOR]$INFO[ListItem.Property(TotalSeasons) ]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="label">
					<description>Episodes</description>
					<left>700</left>
					<top>100</top>
					<width>580</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[20360]: [/COLOR]$INFO[listitem.episode] [COLOR=grey] ($INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102]] - $INFO[ListItem.Property(UnWatchedEpisodes), , $LOCALIZE[16101]])[/COLOR]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="image" id="9898">
					<width>161</width>
					<height>110</height>
					<left>840r</left>
					<top>10</top>
					<fadetime>100</fadetime>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[MovieStudioLogoVar]$INFO[ListItem.Studio,,.png]</texture>
				</control>
				<control type="image" id="7914"> 
					<left>1270r</left> 
					<top>-10</top> 
					<width>335</width> 
					<height>130</height> 
					<texture>$INFO[ListItem.path]/logo.png</texture> 
					<fadetime>100</fadetime> 
					<aspectratio scalediffuse="false">keep</aspectratio> 
				</control>
			</control> 
		</control>
	</include>
</includes>