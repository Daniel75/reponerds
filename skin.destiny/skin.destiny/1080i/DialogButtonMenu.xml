<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu" id="111">
  <defaultcontrol always="true">11</defaultcontrol>
  <coordinates>
    <system>1</system>
    <left>600</left>
    <top>170</top>
  </coordinates>
  <controls>
    <control type="group">
	  <control type="image">
		<left>0</left>
		<top>0</top>
		<width>700</width>
		<height>500</height>
		<texture background="true">skin/button_klein.png</texture>
		<bordertexture border="10">ThumbShadow.png</bordertexture>
		<bordersize>6</bordersize>
		<colordiffuse>$VAR[BackColorFront]</colordiffuse>
	  </control>
	  <control type="image">
		<left>12</left>
		<top>12</top>
		<width>676</width>
		<height>476</height>
		<texture background="true">skin/button_klein.png</texture>
		<colordiffuse>$VAR[ColorButtonDialogeBack]</colordiffuse>
	  </control>
      <control type="grouplist">
        <left>17</left>
        <top>17</top>
        <width>666</width>
		<height>466</height>
        <itemgap>5</itemgap>
        <align>center</align>
        <orientation>vertical</orientation>
        <control type="togglebutton" id="9">
          <description>Master mode button</description>
          <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
          <label>20046</label>
          <altlabel>20045</altlabel>
          <usealttexture>!System.IsMaster</usealttexture>
          <onclick>xbmc.mastermode</onclick>
          <pulseonselect>no</pulseonselect>
          <font>primal_18</font>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
          <visible>System.HasLocks</visible>
        </control>
        <control type="button" id="10">
          <description>LogOff Profile</description>
          <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
          <onclick>dialog.close(all,true)</onclick>
          <onclick>System.LogOff</onclick>
          <pulseonselect>no</pulseonselect>
          <font>primal_18</font>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
          <label>$LOCALIZE[20126] $INFO[system.profilename]</label>
          <visible>System.HasLoginScreen</visible>
          <visible>System.Loggedon</visible>
        </control>
        <control type="button" id="11">
          <description>Exit xbmc</description>
          <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
          <onclick>XBMC.Quit()</onclick>
          <pulseonselect>no</pulseonselect>
          <font>primal_18</font>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
          <label>Kodi $LOCALIZE[13012]</label>
        </control>
		<control type="button" id="17">
		  <description>Cancel Shutdown Timer button</description>
		  <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
		  <onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
		  <pulseonselect>no</pulseonselect>
		  <font>primal_18</font>
		  <label>20151</label>
		  <onup>15</onup>
		  <ondown>16</ondown>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
		  <visible>System.HasAlarm(shutdowntimer)</visible>
		</control>
		<control type="button" id="16">
		  <description>Custom Shutdown Timer button</description>
		  <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
		  <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
		  <pulseonselect>no</pulseonselect>
		  <font>primal_18</font>
		  <label>20150</label>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
		  <onup>17</onup>
		  <ondown>15</ondown>
		</control>
		<control type="button" id="15">
		  <description>Shutdown button</description>
		  <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
		  <onclick>XBMC.Shutdown()</onclick>
		  <pulseonselect>no</pulseonselect>
		  <font>primal_18</font>
		  <label>13005</label>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
		  <onup>16</onup>
		  <ondown>17</ondown>
		</control>
        <control type="button" id="12">
          <description>Suspend xbmc</description>
          <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
          <onclick>XBMC.Suspend()</onclick>
          <pulseonselect>no</pulseonselect>
          <font>primal_18</font>
          <label>$LOCALIZE[13011]</label>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
        </control>
        <control type="button" id="14">
          <description>Reboot button</description>
          <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
          <onclick>XBMC.Reset()</onclick>
          <pulseonselect>no</pulseonselect>
          <font>primal_18</font>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
          <label>13013</label>
        </control>
		<control type="button" id="567">
          <description>Close button</description>
          <width>666</width>
          <height>60</height>
		  <align>center</align>
		  <aligny>center</aligny>
          <onclick>Dialog.Close(111)</onclick>
          <pulseonselect>no</pulseonselect>
          <font>primal_18</font>
          <label>Close</label>
		  <onleft>Dialog.Close(111)</onleft>
          <onright>Dialog.Close(111)</onright>
        </control>
      </control>
      <control type="group">
        <left>405</left>
        <top>105</top>
        <visible>ControlGroup(13).HasFocus</visible>
        <include>VisibleFadeEffect</include>
        <animation effect="slide" start="0,0" end="82,0" time="0" condition="System.HasLocks">Conditional</animation>
        <animation effect="slide" start="0,0" end="82,0" time="0" condition="System.HasLoginScreen + System.LoggedOn">Conditional</animation>
        <control type="image">
          <description>Shutdown Arrow Up image</description>
          <left>-24</left>
          <top>-8</top>
          <width>30</width>
          <height>22</height>
          <texture>onoff_button/ArrowUp.png</texture>
        </control>
        <control type="image">
          <description>Shutdown Arrow Down image</description>
          <left>-24</left>
          <top>105</top>
          <width>30</width>
          <height>22</height>
          <texture>onoff_button/ArrowDown.png</texture>
        </control>
      </control>
      <control type="label">
        <left>15</left>
        <top>285</top>
        <width>975</width>
        <height>52</height>
        <font>font12</font>
        <textcolor>white</textcolor>
        <align>center</align>
        <aligny>center</aligny>
        <label>$LOCALIZE[50214] [B]$INFO[System.Alarmpos][/B]</label>
        <visible>System.HasAlarm(shutdowntimer)</visible>
      </control>
    </control>
  </controls>
</window>